@import 'utils/reset.styl'
@import 'utils/utils.styl'

$blue = #005da4
$sprite = image('sprite.png')

body
	#chatbox-holder
		block-absolute()
		bottom 0
		right 26px
		
	.container
		block-relative()
		max-width 1200px
		margin 0 auto
	header
		block-relative()
		dimensions(100%, 69px)
		margin 0 auto
		border-bottom 1px solid #f5f5f5
		.container
			clear both
			padding-top 10px
			h1
				block-relative-left()
				dimensions(81px, 52px, $sprite)
				text-indent -99999px
			button
				block-relative-right()
				set_font(Arial, 16px, 20px, #888)
				margin-top 10px
				padding 5px 10px
				border 1px solid #ccc
				background-color #fff
				
	footer
		block-relative()
		dimensions(100%, auto, #ebebeb)
		min-height 32px
		padding-bottom 10px
		.container
			.content
				set_font(Arial, 12px, 15px, gray, left)
				padding 12px 0 0 66px
				border-top 1px solid $blue
				a
					text-decoration none
					color $blue
				span
					display inline-block
					margin 0 10px
					color #d5d5d5
					
				strong
					relative()
					font-weight normal
					&:before
						block-absolute()
						dimensions(51px, 29px, image('sprite.png') -94px -10px)
						top -7px
						left -66px
						content ""



@media all and (max-width: 767px)
	#chatbox-holder
		position fixed !important
		width 100%
		height 100%
		top 0
		bottom auto !important
		right 0 !important
	.container
		width 100%
		
@media all and (min-width: 768px) and (max-width: 991px)
	.container
		width 85%
		
@media all and (min-width: 992px) and (max-width: 1119px)
	.container
		width 90%
		
@media all and (min-width: 1200px)
	.container 
		max-width 1200px
	
	
			
@import 'chat.styl'